# TiDB Connection Configuration
# Copy this file to .env and fill in your TiDB credentials

# TiDB Cloud Connection (Get from TiDB Cloud Console)
DB_HOST=gateway01.us-east-1.prod.aws.tidbcloud.com
DB_PORT=4000
DB_USER=your_username
DB_PASSWORD=your_password
DB_NAME=brick_db
DB_SSL=true

# Server Configuration
PORT=3000
NODE_ENV=development

# For local TiDB (if using local installation instead of cloud)
# DB_HOST=localhost
# DB_PORT=4000
# DB_USER=root
# DB_PASSWORD=
# DB_SSL=false
